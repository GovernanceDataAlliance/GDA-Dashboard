SELECT
  i.iso,
  i.short_name,
  i.score,
  i.year,
  w.name,
  w.region,
  w.lending_category,
  w.income_group 
FROM indicator_data i 
  INNER JOIN wb_countries_clasification w 
  ON i.iso=w.iso 
WHERE i.short_name = '{{id}}' 
AND i.year = '{{year}}'
{{#if categoryGroup}}
AND w.{{categoryGroup}} = '{{categoryName}}'
{{/if}}
order by i.score desc, w.name asc