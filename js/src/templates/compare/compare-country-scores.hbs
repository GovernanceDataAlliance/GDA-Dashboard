<ul class="{{iso}}">
  {{#each scores}}
    {{#if score}}
      <li class="table-cell {{#if classColor}} {{classColor}} {{/if}}" data-index="{{short_name}}" data-year="{{year}}">
      {{#round}}{{score}}{{/round}}
      {{#if units_abbr}}
        <span class="units">{{units_abbr}}</span>
      {{/if}}
      </li>
    {{else}}
      <li class="table-cell no-data" data-index="{{short_name}}">no data</li>
    {{/if}}
  {{/each}}
</ul>
