<ul class="table-header">
  {{#each indicators}}
    <li class="table-cell {{short_name}}">
      <h3><a href="/indicators#{{short_name}}">{{product_name}}</a></h3>
      <div class="organization">
        <h2>{{organization}}
          {{#if product_description}}
            <button class="btn-info" data-indicator="{{short_name}}">i</button>
          {{/if}}
        </h2>
      </div>
      <span class="score-range">Score Range: {{#comma max_score}}{{/comma}} - {{#comma min_score}}{{/comma}}</span>
    </li>
  {{/each}}
</ul>
