<ul class="table">
  {{#each indicators}}
    <li class="table-cell {{short_name}}">
      <h3>{{product_name}}</h3>
      <div class="organization">
        <h2>{{organization}}</h2>
        {{#if product_description}}
          <button class="btn-info" data-indicator="{{short_name}}">i</button>
        {{/if}}
      </div>
      {{#if ../content}}
        {{#if score}}
          <div class="score {{#if classColor}} {{classColor}} {{/if}} -{{units}}" data-index="{{short_name}}" data-year="{{year}}">
            <span>{{#round}}{{score}}{{/round}}</span>
            {{#if units_abbr}}
              <span class="units -{{units}}">{{units_abbr}} </span>
            {{/if}}
          </div>
        {{else}}
          <div class="score no-data" data-index="{{short_name}}">not covered</div>
        {{/if}}
      {{else}}
        <div class="score no-data" data-index="{{short_name}}"></div>
      {{/if}}
      <span class="score-range">Score Range: {{max_score}} - {{min_score}}</span>
    </li>
  {{/each}}
</ul>
